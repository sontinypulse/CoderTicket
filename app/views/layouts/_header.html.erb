<header class="business-header">
      <div class="container">
          <div class="row">
              <div class="col-lg-12  text-center">
                  <hr>
                  <h1 class="tagline"></h1>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br><br>

                  <a class="btn btn-success btn-md" href="#">Book Tickets</a>
              </div>
          </div>
      </div>
      <div class="container">
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded" style="background-color: #C11F61; border-radius: 30px; ">
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <%= link_to 'Home', events_path, class: 'nav-link'%>
              </li>
              <% if current_user %>
                <li class="nav-item">
                  <%= link_to 'Log Out', log_out_path, method: 'delete', class: 'nav-link'%>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Sign Up', new_user_path, class: 'nav-link'%>
                </li>
                <li class="nav-item">
                  <%= link_to 'Log In', users_sign_in_path, class: 'nav-link'%>
                </li>
              <% end %>
            </ul>

              <%= form_tag(search_path, :method => "get", id: "search-form", :class => 'form-inline my-2 my-lg-0' ) do %>
              <%= text_field_tag :search, params[:search], placeholder: "Upcoming Events", class: "form-control mr-sm-2" %>
              <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
              <% end %>

          </div>
        </nav>
      </div>
  </header>
